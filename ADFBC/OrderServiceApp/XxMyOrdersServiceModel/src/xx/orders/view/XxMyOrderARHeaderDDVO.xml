  <Variable
    Name="user_name"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="bindNoOfDays"
    Kind="where"
    Type="java.lang.Integer"/>
  <Variable
    Name="bindOrderNum"
    Kind="where"
    Type="java.lang.String"/>
  <SQLQuery><![CDATA[SELECT rct.customer_trx_id,            
         rct.trx_number,            
         rct.trx_date,            
         rct.ct_reference sales_order,       
          aps.due_date,      
          aps.amount_due_original invoice_amount,    
         aps.amount_due_remaining amount_due,    
         flv1.meaning closed_flag    
    FROM ra_customer_trx_all rct,    
         ra_batch_sources_all rbs,    
         hz_parties hp,    
         hz_party_sites hps,    
         hz_locations hl,    
         hz_cust_accounts_all hca,    
         hz_cust_acct_sites_all hcs,    
         xxmyorder_user_details xud,    
         fnd_lookup_values flv,    
         ar_payment_schedules_all aps,    
         fnd_lookup_values flv1    
   WHERE 1 = 1    
     AND rct.bill_to_customer_id = hca.cust_account_id    
     AND rct.customer_trx_id     = aps.customer_trx_id    
     AND UPPER(aps.status)       = UPPER(flv1.lookup_code)    
     AND flv1.lookup_type        = 'INVOICE_TRX_STATUS'    
     AND flv1.language           = USERENV('lang')    
     AND flv1.enabled_flag       = 'Y'    
     AND rct.org_id              = hcs.org_id    
     AND rct.batch_source_id     = rbs.batch_source_id    
     AND rct.org_id              = rbs.org_id    
     AND UPPER(rbs.name)         = UPPER(flv.description)    
     AND flv.lookup_type         = 'XXMYORDER_BATCH_SOURCES'    
     AND flv.language            = USERENV('lang')    
     AND flv.enabled_flag        = 'Y'    
     AND rbs.status              = 'A'    
     AND hca.party_id            = hp.party_id    
     AND hca.cust_account_id     = hcs.cust_account_id    
     AND hcs.party_site_id       = hps.party_site_id    
     AND hp.party_id             = hps.party_id    
     AND hps.location_id         = hl.location_id    
     AND hcs.status              = 'A'    
     AND hca.status              = 'A'    
     AND hp.status               = 'A'    
     AND hps.status              = 'A'    
     AND hl.country              = NVL((xud.country),'US')    
     AND hca.cust_account_id     = xud.customer_id    
     AND xud.user_name           = :user_name    
     AND   decode(:bindNoOfDays,-1,-1,(TRUNC (SYSDATE)                              
                - NVL (TRUNC (rct.trx_date), TRUNC (SYSDATE)))) <= :bindNoOfDays          
                AND  rct.ct_reference   =  decode(:bindOrderNum,'-1',rct.ct_reference ,:bindOrderNum)        
GROUP BY rct.customer_trx_id,    
         rct.trx_number,    
         rct.trx_date,    
         rct.ct_reference,    
         aps.due_date,    
         aps.amount_due_original,    
         aps.amount_due_remaining,    
         flv1.meaning    
ORDER BY due_date DESC]]></SQLQuery>
